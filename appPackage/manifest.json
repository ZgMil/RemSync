    "description": {
        "short": "Awesome app.",
        "full": "Our Awesome app."
    },
    "developer": {
        "name": "RemSync",
        "websiteUrl": "https://thegirlsare.cooking",
        "privacyUrl": "https://thegirlsare.cooking",
        "termsOfUseUrl": "https://thegirlsare.cooking"
    },
    "icons": {
        "outline": "assets/outline.png",
        "color": "assets/color.png"
    },
    "accentColor": "#230201",
    "localizationInfo": {
        "defaultLanguageTag": "en-us",
        "additionalLanguages": []
    },
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "MailboxItem.Read.User",
                    "type": "Delegated"
                },
                {
                    "name": "Document.ReadWrite.User",
                    "type": "Delegated"
                },
                {
                    "name": "Calendars.ReadWrite",
                    "type": "Delegated"
                }
            ]
        }
    },
    "validDomains": [
        "thegirlsare.cooking"
    ],
    "extensions": [
        {
            "requirements": {
                "scopes": [
                    "mail",
                    "calendar"
                ]
            },
            "runtimes": [
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "Mailbox",
                                "minVersion": "1.3"
                            }
                        ]
                    },
                    "id": "MeetingModifyRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://localhost:3000/taskpane.html"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "ShowTaskpaneModify",
                            "type": "openPage",
                            "pinnable": true,
                            "view": "default"
                        }
                    ]
                },
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "Mailbox",
                                "minVersion": "1.3"
                            }
                        ]
                    },
                    "id": "TaskPaneRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://localhost:3000/taskpane.html"
                    },
                    "lifetime": "long",
                    "defaultWindowSize": {
                        "width": 800,
                        "height": 600
                    },
                    "actions": [
                        {
                            "id": "ShowTaskpane",
                            "type": "executeFunction",
                            "pinnable": true,
                            "view": "default",
                            "enables": ["meetingModify", "meetingDetailsOrganizer", "meetingDetailsAttendee"]
                        }
                    ]
                },
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "AddinCommands",
                                "minVersion": "1.1"
                            }
                        ]
                    },
                    "id": "CommandsRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://localhost:3000/commands.html",
                        "script": "https://localhost:3000/commands.js"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "action",
                            "type": "executeFunction"
                        }
                    ]
                }
            ],
            "ribbons": [
